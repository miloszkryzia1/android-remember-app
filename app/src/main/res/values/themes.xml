<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrelloCloneApp" parent="Theme.Material3.Dark">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TrelloCloneApp" parent="Base.Theme.TrelloCloneApp">
        <item name="actionBarTheme">@style/customActionBarTheme</item>
        <item name="actionBarPopupTheme">@style/customPopupTheme</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/drawerArrowStyleWhite</item>
        <item name="title">Remember</item>
        <item name="homeAsUpIndicator">@drawable/arrow_back</item>
        <item name="actionOverflowButtonStyle">@style/optionsMenuIconStyle</item>
        <item name="android:contextPopupMenuStyle">@style/contextMenuStyle</item>
    </style>

    <style name="customActionBarTheme">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="fontFamily">@font/yellowtail</item>
    </style>

    <style name="navMenuTextAppearance">
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="drawerArrowStyleWhite" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="customPopupTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/second_bg</item>
        <item name="fontFamily">@font/urbanist</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="optionsMenuIconStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="contextMenuStyle" parent="Widget.Material3.PopupMenu.ContextMenu">
        <item name="android:popupBackground">@color/second_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>