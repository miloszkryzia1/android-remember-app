<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrelloCloneApp" parent="Theme.Material3.Dark">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TrelloCloneApp" parent="Base.Theme.TrelloCloneApp">
        <item name="actionBarTheme">@style/customActionBarTheme</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/drawerArrowStyleWhite</item>
    </style>

    <style name="customActionBarTheme">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="fontFamily">@font/yellowtail</item>
    </style>

    <style name="navMenuTextAppearance">
        <item name="android:fontFamily">@font/urbanist</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="drawerArrowStyleWhite" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <!--TODO: CHANGE BACK ARROW COLOR TO WHITE -->

</resources>